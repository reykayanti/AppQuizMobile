<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/oren"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/arbutus"
                        android:text="MY QUIZ"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kerjakan 10 soal dibawah ini!!"
                        android:textColor="#FFFFFF"
                        android:textSize="21sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <view
                    android:id="@+id/view"
                    class="androidx.viewpager2.widget.ViewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/bgg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <TextView
                    android:id="@+id/soal1"
                    android:layout_width="330dp"
                    android:layout_height="35dp"
                    android:text="@string/soal1"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/rgsatu"
                    android:layout_width="294dp"
                    android:layout_height="157dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/soal1">

                    <RadioButton
                        android:id="@+id/satua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sayap"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/satub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kaki"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/satuc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Insang"
                        android:textColor="#000000" />
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <TextView
                    android:id="@+id/soal2"
                    android:layout_width="330dp"
                    android:layout_height="35dp"
                    android:text="@string/soal2"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/rgdua"
                    android:layout_width="294dp"
                    android:layout_height="157dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/soal2">

                    <RadioButton
                        android:id="@+id/duaa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kelinci"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/duab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mawar"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/duac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Melati"
                        android:textColor="#000000" />
