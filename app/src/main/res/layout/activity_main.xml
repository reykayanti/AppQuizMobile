                    <RadioButton
                        android:id="@+id/empatb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mencuri"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/empatc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bersih"
                        android:textColor="#000000" />
